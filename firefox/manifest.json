{
    "manifest_version": 2, // so website perms are requested on install instead of having to grant it manually
    "name": "Roblox Profile Notes",
    "version": "1.0.4",
    "description": "Add and save custom notes to individual Roblox profiles.",
	"icons": {
        "48": "icon.png"
    },
	"browser_specific_settings": {
		"gecko": {
			"id": "roblox-profile-notes@projects.char.kim"
		}
	},
    "permissions": [
		"storage"
	],
    "content_scripts": [
        {
            "matches": ["https://www.roblox.com/users/*/profile"],
            "js": ["content.js"]
        }
    ]
}