{
    "manifest_version": 3,
    "name": "Roblox Profile Notes",
    "version": "1.1.0",
    "description": "Add and save custom notes to individual Roblox profiles.",
    "permissions": ["storage", "tabs"],
    "content_scripts": [
        {
            "matches": ["*://*.roblox.com/users/*/profile*"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "48": "icon.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "*://users.roblox.com/v1/users/*"
    ]
}