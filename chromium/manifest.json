{
    "manifest_version": 3,
    "name": "Roblox Profile Notes",
    "version": "1.0.2",
    "description": "Add and save custom notes to individual Roblox profiles.",
    "permissions": ["storage"],
    "content_scripts": [
        {
            "matches": ["https://www.roblox.com/users/*/profile"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "48": "icon.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "https://users.roblox.com/v1/users/*"
    ]
}